<% include layout/header %>

    <body id="clrblk">
        <div class="container">
            <% if (Object.keys(results).length !== 0) { %>
                <table width="100%" border="10" cellpadding="0" cellspacing="0">
                    <% Object.values(results).forEach(result => { %>
                        <tr>
                            <td>
                                <%= result.user[0].email %>
                            </td>
                            <td>
                                <%= result.user[0].name %>
                            </td>
                            <td>
                                <%= result.user[0].username %>
                            </td>
                            <td>
                                <%= result.data.city.name %>
                            </td>
                            <td>
                                <%= result.data.dimension.name %>
                            </td>
                            <td>
                                <%= result.data.gsm.name %>
                            </td>
                            <td>
                                <%= result.data.finish.name %>
                            </td>
                            <td>
                                <%= result.data.totPrice %>
                            </td>
                            <td>
                                    <a href="/doorstep-media/cart-item-detail/<%= result._id %>">View Cart Detail</a>
                            </td>
                            <td>
                                <a href="/doorstep-media/add-to-order/<%= result._id %>">Add to orders</a>
                        </td>
                        </tr>
                        <% }) %>
                </table>
                <% } %>
        </div>
    </body>
    <% include layout/footer %>